<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Codespire" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>


        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>

    </style>

    <style name="Theme.Codespire" parent="Base.Theme.Codespire" />

    <style name="CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Codespire</item>
    </style>



    <style name="CustomEditText">
        <item name="android:background">@drawable/et_border_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textCursorDrawable">@color/orange</item>
        <item name="android:textColor">@color/blueBlack</item>
        <item name="android:layout_height">57dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="CustomButton">
        <item name="cornerRadius">5dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>


    <style name="GreyTextView">
        <item name="android:textColor">@color/blueBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="OrangeTextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="DarkBlueTextView">
        <item name="android:textColor">@color/blueBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:textColor">#FB7181</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>


    <style name="RatingBar">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">#E6BC24</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/orange</item>
        <item name="colorSecondary">@color/orange</item>
    </style>


</resources>