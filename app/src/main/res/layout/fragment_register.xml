<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RegisterFragment">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_codespire" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/DarkBlueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Let's Get Started" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/GreyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Create an new account" />

    <EditText
        android:id="@+id/et_reg_username"
        style="@style/CustomEditText"
        android:layout_marginTop="28dp"
        android:autofillHints="name"
        android:drawableStart="@drawable/ic_user_selector"
        android:hint="Full Name"
        android:inputType="textPersonName|textCapWords" />

    <EditText
        android:id="@+id/et_reg_email"
        style="@style/CustomEditText"
        android:layout_marginTop="8dp"
        android:autofillHints="emailAddress"
        android:drawableStart="@drawable/ic_message_selector"
        android:hint="Your Email"
        android:inputType="textEmailAddress" />

    <EditText

        android:id="@+id/et_reg_password"
        style="@style/CustomEditText"
        android:layout_marginTop="8dp"
        android:autofillHints="password"
        android:drawableStart="@drawable/ic_password_selector"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_reg_confirm_password"
        style="@style/CustomEditText"
        android:layout_marginTop="8dp"
        android:autofillHints="password"
        android:drawableStart="@drawable/ic_password_selector"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sing_up"
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Sign Up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            style="@style/GreyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="have an account? "
            android:textAlignment="textEnd" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_reg_sign_in"
            style="@style/BlueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Sign In" />


    </LinearLayout>


</LinearLayout>